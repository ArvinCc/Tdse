<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orderMapper">


    <select id="findOrderById" parameterType="long" resultType="com.tdse.mx.dao.Order">
        select * from tdse_order where
        order_id =#{order_id}
    </select>

    <select id="findOrderByUserId" parameterType="long" resultType="com.tdse.mx.dao.Order">
        select * from tdse_order where
        order_user_id =#{order_user_id}
    </select>

    <insert id="addOrder" parameterType="com.tdse.mx.dao.Order">
        insert into tdse_order(order_id,order_establish_time,order_user_id) values(#{order_id},#{order_establish_time},#{order_user_id})
    </insert>

    <delete id="deleteById" parameterType="long">
        delete from tdse_order where
        order_id=#{order_id}
    </delete>

    <update id="updateOrder" parameterType="com.tdse.mx.dao.Order">
        update tdse_order set order_establish_time=#{order_establish_time},order_user_id=#{order_user_id} where order_id=#{order_id}
    </update>

</mapper>